@model List<Thyme1.Models.PlantRooms>

@using Thyme1.Models

<h1>Plant Rooms</h1>

@if (Model.Count == 0)
{
    <p>No Plant Rooms yet!</p>
} else {

<table class="table">

    <tr>
        <th>ID</th>
        <th>
            Plant Room Name
        </th>
    </tr>
    @foreach (PlantRooms room in Model)
    {

       
        <tr>
            <td>@room.Id</td>
            <td>@room.Name</td>
        </tr>
    }
</table>
}



