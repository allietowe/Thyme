@using Thyme1.ViewModels;

@model AddReminderViewModel;


<style>
    #cover {
        height: 100%;
        text-align: center;
        display: flex;
        align-items: center;
        position: relative;
    }

    #cover-caption {
        width: 100%;
        position: relative;
        z-index: 1;
    }

    form:before {
        content: '';
        height: 100%;
        left: 0;
        position: absolute;
        top: 0;
        width: 100%;
        background-color: rgba(0,0,0,0.3);
        z-index: -1;
        border-radius: 20px;
    }
    .btn, .btn-lg {
        background-color: #A4B494 !important;
    }
</style>

<a href='javascript:history.go(-1)'>Return to previous page</a>


<section id="cover" class="min-vh-100">
    <div id="cover-caption">
        <div class="container">
            <div class="row text-white">
                <div class="col-xl-5 col-lg-6 col-md-8 col-sm-10 mx-auto text-center form p-4">
                    <h1 class="display-4 py-2 text-truncate">Create Reminder</h1>
                    <h5>Get Reminded to Water your Plant on a Custom Date</h5>
                    <div class="px-2">
                        <form method="post" asp-controller="Reminders" asp-action="Create">
                            <div class="justify-content-center form-group">
                                <input asp-for="EmailAddress" type="email" class="form-control" placeholder="Email Address">
                                <span asp-validation-for="EmailAddress" class="text-danger"></span>
                            </div>
                            <div class="justify-content-center form-group">
                                <input asp-for="Message" type="text" class="form-control" placeholder="Message To Yourself">
                                <span asp-validation-for="Message" class="text-danger"></span>
                            </div>
                            <div class="justify-content-center form-group">
                                <label>Time To Be Reminded:</label>
                                <input asp-for="ReminderTime" type="datetime-local" class="form-control" placeholder="Date Last Watered">
                            </div>
                            <div class="justify-content-center form-group">
                                <label>Which Plant To Be Reminded of?</label>
                                <select asp-for="PlantId" asp-items="Model.Plant" class="form-control" placeholder="What Room Is Your Plant In?"></select>
                                <span asp-validation-for="PlantId" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-lg">Create Reminder</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>