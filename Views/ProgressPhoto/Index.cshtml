@model IEnumerable<Thyme1.Models.ProgressPhotos>
@{
    ViewData["Title"] = "Index";
}
<style>
    h1 {
        text-align: center;
    }
</style>

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhotoName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>

                    <!---Show the image-->
                    <!--Make Image clickable-->
                    <a href="@("Images/"+item.Name)">
                        <img src="@("~/Images/"+item.Name)" asp-append-version="true" width="50" height="50" />
                    </a>

                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.PhotoName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ProgressPhotoID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ProgressPhotoID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ProgressPhotoID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>